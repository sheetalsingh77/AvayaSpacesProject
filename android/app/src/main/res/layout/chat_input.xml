<?xml version="1.0" encoding="utf-8"?>
<com.avayaspacesproject.ui.conference.chat.ChatInput xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/color_background"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/attachment_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/attachment_container_background"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/attachment_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="6dp" />

        <ImageView
            android:id="@+id/attachment_remove"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/ic_close_24"
            app:tint="?attr/colorControlNormal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/attachment_type_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="right|center_vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/attachment_type_file"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_folder_open_24"
            app:tint="?attr/colorControlNormal" />

        <ImageView
            android:id="@+id/attachment_type_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_photo_camera_24"
            app:tint="?attr/colorControlNormal" />

        <ImageView
            android:id="@+id/attachment_type_video"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_video_on"
            app:tint="?attr/colorControlNormal" />

        <ImageView
            android:id="@+id/attachment_type_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/ic_close_24"
            app:tint="?attr/colorControlNormal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="10000"
            android:minHeight="48dp"
            android:paddingStart="8dp" />

        <ImageView
            android:id="@+id/attach"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_attach_file_24"
            app:tint="?attr/colorControlNormal" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_send_24"
            app:tint="?attr/colorControlNormal" />

    </LinearLayout>

</com.avayaspacesproject.ui.conference.chat.ChatInput>